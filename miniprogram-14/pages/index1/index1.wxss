/* pages/index1/index1.wxss */
.searchcontainer{
    position: relative;
    width:100%;
    height: 60rpx;
    border: 1px solid black;
}
.search input{
    width: 87%;
    height: 60rpx;
    margin-left: 90rpx;
}
/*轮播图*/
swiper{
    width: 100%;
    height: calc(100vw*420/1080);
}
image{
    width: 100%;
    height: calc(100vw*420/1080);
}
/*icon图标*/
.navcontainer{
    display:flex ;
}
.navitem{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 20%;
}
.iconfont{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    text-align: center;
    line-height: 100rpx;
    background: rgb(240, 19,19);
    font-size: 50rpx;
    color: #fff;
    margin: 20rpx 0;
}
.navitem>text{
    font-size: 26rpx;
}
.sousuo{
    position: absolute;
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    top: -21rpx;
    left: 20rpx;
    font-size: 45rpx;
    background:white;
    color:black;
}
/*推荐*/
.recommendcontainer{
    padding: 30rpx;
}
.header .title{
    font-size: 32rpx;
    line-height: 80rpx;
    color: #666;
}
.header .more{
    float: right;
    border: 1rpx solid #333;
    padding: 10rpx 20rpx;
    font-size: 24rpx;
    border-radius: 30rpx;
}
/*精选*/
.recommendscroll{
    display: flex;
    height: 320rpx;
}
.scrollitem{
width: 200rpx;
padding: 20rpx;
}
.scrollitem>image{
    width: 200rpx;
    height: 200rpx;
    border-radius: 15rpx;
}
.scrollitem>text{
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}
/*排行榜头部*/
.recommendphb{
    padding: 20rpx;
} 

/*排行榜内容*/
.toplistswiper{
height: 600rpx;
}
.musicitem{
    display: flex;
    margin-bottom: 20rpx;
}
.swiperitem .title{
    font-size: 30rpx;
    line-height: 80rpx;
}
.swiperitem image{
    width: 100rpx;
    height: 100rpx;
}
.swiperitem .count{
    width: 100rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
}
.swiperitem .musicname{
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    max-width: 400rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}