/* pages/seach/seach.wxss */
/* 搜索框 */
.searchcontainer{
    position: relative;
    width:100%;
    height: 60rpx;
    border: 1px solid black;
}
.search input{
    width: 87%;
    height: 60rpx;
    margin-left: 90rpx;
}
.sousuo{
    position: absolute;
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    top: 0rpx;
    left: 20rpx;
    font-size: 45rpx;
    background:white;
    color:black;
}
/* 热搜榜头部*/
.hottitle{
    padding:20rpx;
}
/* 热搜榜内容区域*/
.hotlist{
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    margin-top: 40rpx;
}
.listitem{
    width: 46%;
    padding: 20rpx 10rpx;
}
.listitem>text{
    overflow: hidden;
    text-overflow: ellipsis;
}
.count{
    padding:0rpx 20rpx;
}
/*获取结果*/
.searchresult{
    width: 100%;
    height: 80rpx;
    border: 1px solid black;
}
.searchresult>text{
    line-height: 80rpx;
    padding: 20rpx;
}